<%= render @user %>
<div class= "bio">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>
<div class= "posts-container">
  <%= render @user.recent_posts %>
  <div class= "buttons-container">
    <%= link_to user_posts_path(@user.id) do %>
        <button type="button">See All</button>
    <%end%>
    <button type="button"><%= link_to "New Post", new_user_post_path(@user.id) %></button>
    <% flash.each do |type, msg| %><div><%= msg %></div><% end %>
  </div>
</div>
