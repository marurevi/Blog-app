 <div class="container">
    <div class="photo">
        <img src=<%= user.photo %> alt="<%= user.name %>">
    </div>
    <div class="user">
        <h3><%= user.name  %> - <%= user.id %></h3><br>
        <p>
          <%= link_to user_path(user.id) do %>
            Number of posts: <%= user.posts_counter %>
          <%end%>
        </p>
    </div>
 </div>
